<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#fff"
app:cardElevation="@dimen/space_3"
app:cardUseCompatPadding="true"
card_view:cardCornerRadius="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:layout_weight=".47"
                android:text="Order ID"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_payment_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:layout_weight="1"
                android:text="pay_29QQoUBi66xm2f"
                android:textColor="#000"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:fontFamily="@font/abel"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="payment date:"
                android:textSize="@dimen/text_size_small" />

            <Fonts.LatoBLack
                android:id="@+id/payment_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:fontFamily="@font/abel"
                android:textStyle="bold"
                android:text="01/01/2019"
                android:textColor="#000"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="0dp"
                android:fontFamily="@font/abel"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Time"

                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/payment_time"
                android:layout_width="0dp"
                android:fontFamily="@font/abel"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_weight="1"
                android:text="15:00"
                android:textSize="@dimen/text_size_small"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Fonts.LatoBLack
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text=""
                android:textColor="@color/dark_gray" />

            <Fonts.LatoBLack
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:text=""
                android:textColor="#000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_9"
                android:fontFamily="@font/abel"
                android:textStyle="bold"
                android:layout_weight=".6"
                android:gravity="right"
                android:text="payment method"

                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/payment_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UPI/card..."
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/abel"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space_8"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/payment_status_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#C0C0C0"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/abel"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Amount : INR "
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />
                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abel"
                    android:textStyle="bold"
                    android:text="_____"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abel"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/space_8"
                    android:text="payment Status : "
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />
                <TextView
                    android:id="@+id/payment_status"
                    android:fontFamily="@font/abel"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_8"
                    android:text="______"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <!--                <RelativeLayout-->
            <!--                    android:id="@+id/relative_background"-->
            <!--                    android:layout_width="210dp"-->
            <!--                    android:layout_height="38dp"-->
            <!--                    android:layout_marginLeft="@dimen/space_10"-->
            <!--                    android:layout_marginRight="@dimen/space_10"-->
            <!--                    android:layout_marginTop="@dimen/space_14"-->
            <!--                    android:background="@drawable/bg_rounded_button">-->

            <!--                    <Fonts.LatoBLack-->
            <!--                        android:id="@+id/status"-->
            <!--                        android:layout_width="match_parent"-->
            <!--                        android:layout_height="match_parent"-->
            <!--                        android:gravity="center"-->
            <!--                        android:text=" "-->
            <!--                        android:textColor="#fff"-->
            <!--                        android:textSize="@dimen/text_size_small" />-->


            <!--                </RelativeLayout>-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/space_4"
            android:layout_weight=".7"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/payment_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:fontFamily="@font/abel"
                    android:textStyle="bold"
                    android:text="Phone Number"
                    android:textColor="@color/dark_black"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/payment_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:fontFamily="@font/abel"
                    android:textStyle="bold"
                    android:text="Email "
                    android:textColor="@color/black"
                    android:textSize="12sp" />



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space_8"
        android:background="@color/gray" />

</LinearLayout>
</android.support.v7.widget.CardView>