<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/space_5"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_subcat_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_8"
                android:background="@color/gray" />

        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/iv_subcat_img"
            app:layout_constraintRight_toLeftOf="@+id/iv_subcat_minus"
            app:layout_constraintTop_toTopOf="@+id/iv_subcat_img">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Fonts.LatoBLack
                android:layout_width="0dp"
                android:layout_height="30sp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.6"
                android:text="Machine Name:"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />

                <Fonts.LatoBLack
                    android:id="@+id/tv_subcat_title"
                    android:layout_width="0dp"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:text="Machine Name"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <Fonts.LatoBLack

                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Owner Name: "
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_3"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Fonts.LatoBLack

                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:text=" Order Time:"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small"
                    android:layout_weight="0.5"/>
                <Fonts.LatoBLack
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:text=" "
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_small" />

                <Fonts.LatoBLack

                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_weight="0.5"
                    android:text=" Order Date: "
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />
                <Fonts.LatoBLack
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:text=" "
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/space_8"
            android:background="@color/gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginBottom="@dimen/space_3"
                android:layout_marginTop="@dimen/space_4"
                android:background="#000fff"
                android:gravity="center_vertical"
                android:paddingLeft="50sp"
                android:orientation="horizontal">

                <Fonts.LatoBLack
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_cart_total"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    />
                <Fonts.LatoBLack
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/currency"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />
                <Fonts.LatoBLack
                    android:id="@+id/tv_subcat_price"
                    android:layout_width="90sp"
                    android:layout_height="wrap_content"
                    android:text="12587"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large" />

                <Fonts.LatoBLack
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_normal"
                    android:text="Payment type: "

                    android:textColor="@color/white"/>
                <Fonts.LatoBLack
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/payment_type"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_large"
                    android:text="GPAY"

                    android:textColor="@color/white"/>


            </LinearLayout>

        </LinearLayout>






</android.support.v7.widget.CardView>