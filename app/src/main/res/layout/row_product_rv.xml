<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15sp"
    android:id="@+id/card_view"
    android:layout_margin="5sp"
    app:contentPaddingLeft="7sp"
    app:contentPaddingRight="0sp"
    app:cardElevation="9sp"
    app:cardMaxElevation="10sp"
    app:cardBackgroundColor="@color/color_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="125sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="2sp"
            >

            <!--<ImageView-->
            <!--android:id="@+id/iv_subcat_img"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="80dp"-->
            <!--app:srcCompat="@drawable/icon" />-->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/iv_subcat_img"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_cardview"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="5sp"
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:text="Machine Name:"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:layout_marginTop="7sp"
                    android:id="@+id/tv_subcat_title"
                    android:text="12344444"
                    android:textColor="@color/dark_black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="1.25"
                    android:layout_marginLeft="5sp"
                    android:textSize="18sp"
                    android:text="Owner Name:"
                    android:gravity="left"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40sp"
                    android:layout_marginTop="5sp"
                    android:layout_weight="1.5"
                    android:textStyle="bold"
                    android:textColor="@color/dark_black"
                    android:textSize="19sp"
                    android:text="XYZABCDEFG"/>
            </LinearLayout>

            <view class="in.juspay.godel.ui.OnScreenDisplay$View"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/gray"
                android:layout_marginTop="5sp">

            </view>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:padding="5sp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_marginTop="10sp"
                        android:layout_weight="1"
                        android:layout_marginLeft="19sp"
                        android:textSize="18sp"
                        android:text="Price"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_subcat_price"
                        android:layout_weight="1"
                        android:layout_marginLeft="19sp"
                        android:layout_marginTop="7sp"
                        android:textColor="@color/dark_black"
                        android:textSize="19sp"
                        android:text="20000"/>
                </LinearLayout>

                <view class="in.juspay.godel.ui.OnScreenDisplay$View"
                    android:layout_width="1sp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    android:layout_marginTop="5sp">
                </view>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.25"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="20sp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:text="Duration"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="7sp"
                        android:textSize="19sp"
                        android:id="@+id/tv_order_time"
                        android:textColor="@color/dark_black"
                        android:text="60 min"/>

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:id="@+id/payment_type"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>

